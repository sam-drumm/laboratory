{
  "name": "co_lab",
  "version": "0.1.0",
  "main": "server/index.js",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sam-drumm/laboratory.git"
  },

  "scripts": {
    "start": "node server",
    "build": "run-p build:client build:server",
    "build:client": "npm run webpack -- --mode=production",
    "build:server": "npm run db:migrate",
    "webpack": "webpack --config client/webpack.config.js",
    "dev": "run-p dev:client dev:server",
    "dev:client": "npm run webpack -- --watch",
    "dev:server": "nodemon server",
    "knex": "knex --knexfile server/db/knexfile.js",
    "db:migrate": "npm run knex migrate:latest",
    "db:seed": "npm run knex seed:run",
    "db:reset": "npm run knex migrate:rollback && npm run db:migrate && npm run db:seed",
    "postinstall": "run-s db:migrate db:seed",
    "test": "jest --selectProjects client server",
    "test:watch": "npm run test -- --watchAll",
    "lint": "eslint --ext .js,.jsx ."
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ],
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-transform-runtime"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eda"
    ],
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "jest": {
    "verbose": true,
    "projects": [
      {
        "displayName": "client",
        "testEnvironment": "jsdom",
        "testMatch": [
          "<rootDir>/client/**/*.test.js"
        ],
        "setupFilesAfterEnv": [
          "@testing-library/jest-dom"
        ]
      },
      {
        "displayName": "server",
        "testMatch": [
          "<rootDir>/server/**/*.test.js"
        ]
      },
      {
        "displayName": "e2e",
        "testMatch": [
          "**/e2e/?(*.)+(spec|test).[jt]s?(x)"
        ]
      }
    ]
  },
  "engines": {
    "node": "14.x",
    "npm": "6.14.x"
  },
  "dependencies": {
    "@auth0/auth0-react": "^1.8.0",
    "@chakra-ui/icons": "^1.1.7",
    "@chakra-ui/react": "^1.8.7",
    "@emotion/react": "^11.8.2",
    "@emotion/styled": "^11.8.1",
    "chakra-ui-autocomplete": "^1.4.5",
    "express": "^4.17.1",
    "express-jwt": "^6.1.0",
    "express-jwt-authz": "^2.4.1",
    "flat-color-icons": "^1.1.0",
    "formik": "^2.2.9",
    "framer-motion": "^6.2.10",
    "jwks-rsa": "^2.0.4",
    "knex": "^0.95.11",
    "pg": "^8.7.1",
    "react-icons": "^4.3.1",
    "react-lorem-ipsum": "^1.4.10",
    "react-share": "^4.4.0",
    "superagent": "^6.1.0",
    "yup": "^0.32.11"
  },
  "devDependencies": {
    "@babel/core": "7.15.5",
    "@babel/plugin-proposal-class-properties": "^7.14.5",
    "@babel/plugin-proposal-object-rest-spread": "^7.15.6",
    "@babel/plugin-transform-runtime": "7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@testing-library/jest-dom": "^5.16.3",
    "@testing-library/react": "12.1.0",
    "@testing-library/user-event": "^14.0.4",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.7.1",
    "dotenv": "^10.0.0",
    "eslint": "7.32.0",
    "eslint-config-eda": "0.1.4",
    "jest": "^27.2.1",
    "mini-css-extract-plugin": "^2.6.0",
    "nodemon": "^2.0.13",
    "npm-run-all": "^4.1.5",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-redux": "^7.2.5",
    "react-router-dom": "^6.2.2",
    "react-scroll": "^1.8.6",
    "redux": "^4.1.1",
    "redux-thunk": "^2.3.0",
    "sass": "^1.50.0",
    "sass-loader": "^12.6.0",
    "sqlite3": "^5.0.8",
    "style-loader": "^3.3.1",
    "supertest": "6.1.6",
    "webpack": "5.54.0",
    "webpack-cli": "4.8.0"
  }
}
